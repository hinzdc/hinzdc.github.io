# Loop melalui daftar aplikasi dan hapus mereka satu per satu
foreach ($app in $appxApps) {
    Write-Host "Menghapus aplikasi: $app"
    Get-AppxPackage -AllUsers -Name $app | Remove-AppxPackage
}

